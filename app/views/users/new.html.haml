.row
  .col-md-4.col-md-offset-4
    .app-name
      CalX
    .app-tagline
      A beautiful calendar
.row
  .col-md-4.col-md-offset-4
    .panel.panel-default
      .panel-heading
        %h3.panel-title Sign up
      .panel-body
        = form_tag(create_user_path, method: :post) do |f|
          - if @user.errors.any?
            .alert.alert-danger
              = @user.errors.full_messages.first
          .form-group
            = email_field_tag :email, nil, placeholder: "Email", class: "form-control"
          .form-group
            = password_field_tag :password, nil, placeholder: "Password", class: "form-control"
          .form-group
            = password_field_tag :password_confirmation, nil, placeholder: "Password confirmation", class: "form-control"
          .form-group
            = select_tag :time_zone, time_zone_options_for_select, class: "form-control"
          .form-group
            = submit_tag "Sign up", class: "btn btn-primary btn-block"
          .form-group
            = link_to "Sign in", signin_path, class: "auth-link"
