.row
  .col-md-6.col-md-offset-3
    = form_tag(update_user_path, method: :put) do
      - if flash[:success]
        .alert.alert-success
          = flash[:success]
      - if @user.errors.any?
        .alert.alert-danger
          = @user.errors.full_messages.first
      .list-group
        .list-group-item
          .row
            .col-md-3
              Email
            .col-md-9
              = text_field_tag :email, @user.email, class: "form-control"
      .list-group
        .list-group-item
          .row
            .col-md-3
              New password
            .col-md-9
              = password_field_tag :password, nil, class: "form-control"
      .list-group
        .list-group-item
          .row
            .col-md-3
              Confirm new password
            .col-md-9
              = password_field_tag :password_confirmation, nil, class: "form-control"
      .list-group
        .list-group-item
          .row
            .col-md-3
              Time zone
            .col-md-9
              = select_tag :time_zone, time_zone_options_for_select(@user.time_zone.time_zone), class: "form-control"
      .list-group
        .list-group-item
          .row
            .col-md-3
              Current password to save changes
            .col-md-9
              = password_field_tag :current_password, nil, class: "form-control"
      .form-group
        = submit_tag "Save changes", class: "btn btn-primary btn-block"
