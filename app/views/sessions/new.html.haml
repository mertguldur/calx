.row
  .col-md-4.col-md-offset-4
    .panel.panel-default
      .panel-heading
        %h3.panel-title Sign in
      .panel-body
        = form_for(:session, url: signin_path) do |f|
          .form-group
            = f.email_field :email, placeholder: "Email", class: "form-control"
          .form-group
            = f.password_field :password, placeholder: "Password", class: "form-control"
          .form-group
            = f.submit "Sign in", class: "btn btn-primary btn-block"
          .form-group
            = link_to "Don't have an account? Sign up", signup_path, class: "auth-link"
