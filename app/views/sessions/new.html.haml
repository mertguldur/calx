.row
  .col-md-4.col-md-offset-4
    .app-name
      CalX
    .app-tagline
      A beautiful calendar
.row
  .col-md-4.col-md-offset-4.sign-in-form
    = form_for(:session, url: signin_path) do |f|
      - if flash[:error]
        .alert.alert-danger
          = flash[:error]
      .form-group
        = f.email_field :email, placeholder: "Email", class: "form-control"
      .form-group
        = f.password_field :password, placeholder: "Password", class: "form-control"
      .form-group
        = f.submit "Sign in", class: "btn btn-primary btn-block"
      .form-group
        = link_to "Don't have an account? Sign up", new_user_path, class: "auth-link"
