.row
  .col-md-4.col-md-offset-4
    = "Today's events #{Date.current}"
.row
  .col-md-4.col-md-offset-4
    .list-group
      - @events.each do |event|
        .list-group-item
          = link_to "#{format_event_time(event.start_time)} - #{event.title}", show_event_path(event)
.row
  .col-md-4.col-md-offset-4
    = link_to "Add another event", new_event_path, class: "btn btn-default"
