.row
  .col-md-6.col-md-offset-3
    .month-and-year
      = month_and_year_of_date(@date)
    .weekdays
      %a#week-arrow{href: events_path(date: @date.last_week)}
        %span.icon.icon-arrow-bold-left
      - weekdays_of_date(@date).each do |date|
        %a{href: events_path(date: date), id: date == @date ? 'selected-day-link' : 'day-link'}
          .day
            .day-name
              = abbr_day_name(date)
            .day-number
              %span.weekday
                = date.day
            - if date == @today
              .orange-color-bar
      %a#week-arrow{href: events_path(date: @date.next_week)}
        %span.icon.icon-arrow-bold-right
.row
  .col-md-6.col-md-offset-3
    .add-event-button
      = link_to @events.any? ? "Add another event" : "Add first event", new_event_path, class: "btn btn-primary-outline"
.row
  .col-md-4.col-md-offset-4
    .list-group
      - @events.each do |event|
        .list-group-item
          = link_to "#{format_event_time(event.start_time)} - #{event.title}", show_event_path(event)
